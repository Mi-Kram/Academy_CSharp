<Window x:Class="NP_SmtpClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NP_SmtpClient"
        mc:Ignorable="d"
        Title="SMTP client" Height="581.34" Width="800">
    <Grid Background="#FFD8E2EE">
        <TextBox Name="txtFrom" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" Text="admin@yahoo.com" VerticalAlignment="Top" Width="305"/>
        <Label Content="From" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="305"/>
        <TextBox Name="txtTo" HorizontalAlignment="Left" Height="23" Margin="10,100,0,0" TextWrapping="Wrap" Text="samoylenko@itstep.org" VerticalAlignment="Top" Width="305"/>
        <Label Content="To" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Width="305"/>
        <TextBox Name="txtSubject" HorizontalAlignment="Left" Height="23" Margin="10,159,0,0" TextWrapping="Wrap" Text="Hello from admin!!!" VerticalAlignment="Top" Width="305"/>
        <Label Content="Subject" HorizontalAlignment="Left" Margin="10,128,0,0" VerticalAlignment="Top" Width="305"/>
        <TextBox Name="txtBody" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="115" Margin="10,218,0,0" TextWrapping="Wrap" Text="Hello from Admin!!!&#xD;&#xA;How are you?&#xD;&#xA;&#xD;&#xA;ATTENTION!&#xD;&#xA;This is not a spam letter!" VerticalAlignment="Top" Width="305" AcceptsReturn="True"/>
        <Label Content="Body" HorizontalAlignment="Left" Margin="10,187,0,0" VerticalAlignment="Top" Width="305"/>
        <TextBox Name="txtAccount" HorizontalAlignment="Left" Height="23" Margin="10,381,0,0" TextWrapping="Wrap" Text="samoylenko@itstep.org" VerticalAlignment="Top" Width="305"/>
        <Label Content="Mail account" HorizontalAlignment="Left" Margin="10,350,0,0" VerticalAlignment="Top" Width="305"/>
        <PasswordBox Name="txtPassword" PasswordChar="*" HorizontalAlignment="Left" Height="23" Margin="10,440,0,0" VerticalAlignment="Top" Width="305"/>
        <Label Content="Mail account password" HorizontalAlignment="Left" Margin="10,409,0,0" VerticalAlignment="Top" Width="305"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="10,482,0,0" VerticalAlignment="Top" Width="148" Click="Button_Click"/>
        <Button Content="Submit async" HorizontalAlignment="Left" Margin="173,482,0,0" VerticalAlignment="Top" Width="142" Click="Button_Click_1"/>

    </Grid>
</Window>
