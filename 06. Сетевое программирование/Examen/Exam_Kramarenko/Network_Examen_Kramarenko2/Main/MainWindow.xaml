<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="MainWindow"  Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        Closed="Window_Closed">

    <!--Height="300" Width="500"-->
    <!--Height="600" Width="1000"-->

    <Window.Resources>
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Azure"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HorizontalGridLinesBrush" Value="DarkGray"/>
            <Setter Property="RowBackground" Value="LightGray"/>
            <Setter Property="AlternatingRowBackground" Value="White"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

        <Style x:Key="backBtnStyleOn" TargetType="{x:Type Button}">

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Ellipse
                                Fill="#FFBFBFBF"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Width="34.5"
                                Height="34.5"
                                Margin="1,1,0,0"
                                StrokeThickness="3"
                                Stroke="#FFA0A0A0"/>
                            <Path
                                Data="M2,12A10,10 0 0,1 12,2A10,10 0 0,
                                1 22,12 A10,10 0 0,1 12,22A10,10 0 0,
                                1 2,12M18,11H10L13.5,7.5L12.08,6.08
                                L6.16,12L12.08,17.92L13.5,16.5L10,13
                                H18V11Z" 
                                Fill="#FF383838"
                                RenderTransformOrigin="0,0">

                                <Path.RenderTransform>
                                    <ScaleTransform
                                    ScaleX="1.5"
                                    ScaleY="1.5"/>
                                </Path.RenderTransform>
                            </Path>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransformOrigin" Value="1,1"/>
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="backBtnStyleOff" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Ellipse
                                Fill="LightGray"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Height="25"
                                Width="25"
                                Margin="5,5,0,0"/>
                            <Path
                                Data="M2,12A10,10 0 0,1 12,2A10,10 0 0,
                                1 22,12 A10,10 0 0,1 12,22A10,10 0 0,
                                1 2,12M18,11H10L13.5,7.5L12.08,6.08
                                L6.16,12L12.08,17.92L13.5,16.5L10,13
                                H18V11Z" 
                                Fill="#FF909090"
                                RenderTransformOrigin="0,0">

                                <Path.RenderTransform>
                                    <ScaleTransform
                                    ScaleX="1.5"
                                    ScaleY="1.5"/>
                                </Path.RenderTransform>
                            </Path>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid 
            x:Name="LoginGrid" 
            Visibility="Visible">

            <TextBlock
            Text="Login:"
            Margin="10,10,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"/>
            <TextBox 
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="70,10,0,0"
            Width="400"
            Name="LogInTextBox"/>


            <TextBlock
            Text="Password:"
            Margin="10,40,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"/>
            <PasswordBox 
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="70,40,0,0"
            Width="400"
            Name="PasswordBox"
            BorderThickness="1"/>

            <Button
            Content="Register"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="10,80,0,0"
            Click="Register_Click"/>

            <Button
            Content="LogIn"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="0,80,10,0"
            Click="Login_Click" Grid.Column="1"/>
        </Grid>

        <Grid 
            x:Name="MainGrid" 
            Visibility="Collapsed">

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel
                Background="#FFBDBDBD"
                Orientation="Horizontal">

                <Button
                    Content="Add folder" 
                    Padding="10,1,10,1"
                    Background="#FFF0F0F0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="5,0,0,0"
                    Click="AddFolder_Click"/>

                <Button
                    Content="Remove" 
                    Padding="10,1,10,1"
                    Background="#FFF0F0F0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="5,0,0,0"
                    Click="Remove_Click"/>

            </StackPanel>

            <Button
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Style="{StaticResource backBtnStyleOff}"
                Click="GoBack_Click"
                Name="GoBackBtn"/>

            <TextBox
                Grid.Row="1"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="50,25,0,0"
                Text="Server:"
                FontSize="16"
                BorderThickness="1,1,0,1"
                IsReadOnly="True"/>
            <TextBox
                Grid.Row="1"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                Margin="99,25,10,0"
                FontSize="16"
                BorderThickness="0,1,1,1"
                x:Name="serverPath_TextBox"
                IsReadOnly="True"/>

            <DataGrid
                x:Name="dataGrid"
                Grid.Row="1"
                Background="#FFE5E5E5"
                Margin="10,50,10,10"
                Style="{StaticResource DataGridStyle}"
                IsReadOnly="True"
                AllowDrop="True"
                Drop="dataGrid_Drop"
                >

                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridRow}">
                        <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                        <EventSetter Event="PreviewMouseUp" Handler="DataGridRow_PreviewMouseUp"/>
                        <EventSetter Event="MouseLeave" Handler="DataGridRow_MouseLeave"/>
                        <EventSetter Event="PreviewMouseDown" Handler="DataGridRow_PreviewMouseDown"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock
                x:Name="tmpBOX"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0,0,20,20"/>
        </Grid>
    </Grid>
</Window>
