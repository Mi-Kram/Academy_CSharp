<Window x:Class="Main.ShowCars"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="ShowCars" Height="450" Width="800" ResizeMode="NoResize"
        Loaded="Window_Loaded">
    
    <Grid Background="White">
        <TextBlock x:Name="OwnTxtBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,15,0,0"  FontSize="30" FontWeight="Bold"/>
        <Border Background="#FFE8E8E8" BorderBrush="#FF979797" BorderThickness="3" Width="600" Margin="30,70,0,20" HorizontalAlignment="Left">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel x:Name="stackPanel" Orientation="Vertical">
                    <TextBlock Text="Cars" TextAlignment="Center" FontSize="20" FontWeight="Bold" Background="#FF727272"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Button Width="120" Height="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Content="OK" FontSize="60" FontWeight="Bold" Click="OKBtn_Click"/>

    </Grid>
</Window>
