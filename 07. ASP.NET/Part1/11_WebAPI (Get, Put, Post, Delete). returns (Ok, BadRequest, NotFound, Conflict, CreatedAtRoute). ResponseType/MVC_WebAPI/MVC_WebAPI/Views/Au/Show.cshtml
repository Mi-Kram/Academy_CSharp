
@{
    ViewBag.Title = "jQuery table";
}

<h2>jQuery table</h2>

<table id="authors" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>First name</th>
            <th>Last name</th>
            <th>City</th>
            <th>State</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<br />

<script>

    $(document).ready(function () {
        var table = $("#authors").DataTable({
            ajax: {
                url: "/api/authors",
                dataSrc: ""
            },
            searching: true,
            ordering: true,
            paging: true,
            lengthChange: true,
            columns: [
                {
                    data: "au_id"
                },
                {
                    data: "au_fname",
                    render: function (data, type, author) {
                        return "<span>" + author.au_fname + "</span>";
                    }
                },
                {
                    data: "au_lname"
                },
                {
                    data: "city"
                },
                {
                    data: "state"
                },
                {
                    data: "au_id",
                    render: function (data) {
                        return "<button class='btn-link js-delete' data-book-id=" + data + ">Delete</button>";
                    }
                }
            ]
        });

        table.on('search.dt', function () {
            //alert("search!");
        });

        $("#authors").on("click", ".js-delete", function () {
            var button = $(this);

            if (confirm("Are you sure you want to delete this book?")) {
                $.ajax({
                    url: "http://localhost:49349/api/authors/" + button.attr("data-book-id"),
                    method: "DELETE",
                    success: function () {
                        table.row(button.parents("tr")).remove().draw();
                    }
                });
            }
        });
    });

</script>