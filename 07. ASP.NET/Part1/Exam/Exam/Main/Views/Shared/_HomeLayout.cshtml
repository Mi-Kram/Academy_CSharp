<!DOCTYPE html>
<html lang="ru">
<head>
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" href="~/Content/ChatsStyle.css">
	<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
	<script src="~/Scripts/jquery-3.4.1.min.js"></script>
	<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
	<script src="~/Scripts/ChatsScript.js"></script>
</head>
<body>

	<div class="LeftMenu">
		<button class="CloseMenuButton" onclick="HideLeftMenu(); ClearFocus();">
			<ion-icon name="grid-outline"></ion-icon>
		</button>

		<a href="~/Home/Chats" class="LeftMenuItem" onclick="ClearFocus()">
			<ion-icon name="chatbubbles"></ion-icon>
			<p>Чаты</p>
		</a>
		<a href="~/Home/About" class="LeftMenuItem" onclick="ClearFocus()">
			<ion-icon name="help-circle"></ion-icon>
			<p>О нас</p>
		</a>
		<a href="~/Home/LogOut" class="LeftMenuItem" onclick="ClearFocus()">
			<ion-icon name="log-out"></ion-icon>
			<p>Выход</p>
		</a>
	</div>

	<div class="TopMenu">
		<button class="OpenMenuButton" onclick="ShowLeftMenu(); ClearFocus();">
			<ion-icon name="grid-outline"></ion-icon>
		</button>
	</div>

	<div style="height: 50px"></div>
	@RenderBody()
</body>
</html>



