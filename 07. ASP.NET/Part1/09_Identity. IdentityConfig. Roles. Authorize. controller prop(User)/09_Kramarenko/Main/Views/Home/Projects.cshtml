@model List<Main.Models.Project>

@{
	ViewBag.Title = "Projects";
}

<style>
	.ProjectsMainDiv {
		display: flex;
		flex-wrap: wrap;
		justify-content: flex-start;
	}

	.ProjectBox {
		padding: 10px 15px;
		border-radius: 10px;
		background: rgb(207, 207, 235);
		width: 300px;
		height: 75px;
		overflow: hidden;
		position: relative;
		margin-right: 30px;
		margin-top: 10px;
		box-sizing: border-box;
	}

		.ProjectBox::after {
			content: '';
			position: absolute;
			left: 0;
			bottom: 0;
			width: 100%;
			height: 20px;
			background: linear-gradient(to bottom, transparent, rgba(207, 207, 235, 0.6));
		}

	.ProjectCaption {
		margin: 0px;
		padding: 0px;
		font-weight: 700;
		font-size: 18pt;
		display: block;
		white-space: nowrap;
	}

	.ProjectDesc {
		margin: 0px;
		padding: 0px;
		display: block;
		font-size: 10pt;
		color: rgb(80, 80, 80);
		text-align: justify;
		width: 100%;
		word-wrap:break-word;
	}
</style>

<div class="ProjectsMainDiv">
	@foreach (var project in Model)
	{
		<div class="ProjectBox" onclick="location.href='@Url.Action("ProjectDetail", "Home", new { projectID=project.ID })'">
			<p class="ProjectCaption">@project.Caption</p>
			<p class="ProjectDesc">@project.Description</p>
		</div>
	}
</div>

<hr />

@Html.ActionLink("Создать прокет", "CreateProjectForm", null, new { @class="btn btn-primary" })
