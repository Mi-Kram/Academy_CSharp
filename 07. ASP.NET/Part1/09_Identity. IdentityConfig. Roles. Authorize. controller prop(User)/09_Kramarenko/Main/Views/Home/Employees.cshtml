@model List<Main.Models.ApplicationUser>
@{
	ViewBag.Title = "Employees";
}

<style>
	.EmployeesMainDiv {
		padding: 20px;
		display: flex;
		flex-wrap: wrap;
		justify-content: flex-start;
	}

	.EmployeeBox {
		height: 250px;
		width: 200px;
		overflow: hidden;
		padding: 10px;
		display: flex;
		flex-flow: column;
		border-radius: 10px;
		margin-top: 10px;
		margin-right: 30px;
		background: rgb(197, 208, 238);
	}

	.EmployeePhotoDiv {
		width: 100%;
		height: 200px;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.EmployeePhoto {
		max-width: 100%;
		max-height: 100%;
	}

	.EmployeeContent {
		padding-top: 10px;
		flex-shrink: 0;
		height: 25px;
		font-size: 16pt;
	}

	.EmployeeName {
		display: block;
	}
</style>

<div class="EmployeesMainDiv">

	@foreach (var employee in Model)
	{
		<div class="EmployeeBox" onclick="location.href='@Url.Action("EmployeeDetail", "Home", new { employeeLogin=employee.UserName })'">
			<div class="EmployeePhotoDiv">
				<img class="EmployeePhoto" onmousedown="return false" src="/@employee.ImgSrc" alt="photo">
			</div>
			<div class="EmployeeContent">
				<p class="EmployeeName">@employee.UserName</p>
			</div>
		</div>
	}

</div>
