@model Main.Models.CarModel

@{
    ViewBag.Title = "Car";
}

<h2 style="color: white;">Car @Model.Brand</h2>

<img class="DetailImg" src="/@Model.ImgSrc" />
<table class="CarDetailTable" style="color: white;">
    <tbody>
        <tr><td>Brand</td><td>@Model.Brand</td></tr>
        <tr><td>Model</td><td>@Model.Model</td></tr>
        <tr><td>Speed</td><td>@Model.Speed</td></tr>
        <tr><td>Price</td><td>@Model.Price</td></tr>
        <tr><td>Year</td><td>@Model.Date.Year</td></tr>
        <tr><td>Type</td><td>@Model.Type</td></tr>
    </tbody>
</table>

<div style="margin-top: 20px;">
    <style>
        .btn + .btn {
            margin-left: 10px;
        }
    </style>


    <input class="btn btn-primary" type="button" value="Back" onclick="location.href='/Car/Index'" />
    <input class="btn btn-primary" type="button" value="Remove" onclick="@("location.href='/Car/Remove?IDsStr="+Model.ID.ToString()+"'")" />
    <input class="btn btn-primary" type="button" value="Edit" onclick="@("location.href='/Car/Edit?id="+Model.ID+"'")" />
</div>

