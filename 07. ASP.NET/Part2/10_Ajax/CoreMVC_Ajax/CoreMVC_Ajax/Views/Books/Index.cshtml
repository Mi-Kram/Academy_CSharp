@model CoreMVC_Ajax.ViewModels.BooksViewModel

@{
    ViewBag.Title = "Books";
}

<h2>Books</h2>

<form method="post" data-ajax="true" data-ajax-method="post" data-ajax-url="/Books/BooksList" data-ajax-update="#results" data-ajax-confirm="Are you sure?">
    <input type="text" name="genre" />
    <input type="submit" value="Поиск" />
</form>

    <br />

    <div id="results">
        <table id="booksTable" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th>Pubdate</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Books)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.Genre</td>
                        <td>@book.PubDate</td>
                        <td>@book.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
