<Window x:Class="WPF_Core_RESTFUL_Client.AuthorForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Core_RESTFUL_Client"
        mc:Ignorable="d"
        Title="AddAuthor" Height="625.634" Width="645.57" ResizeMode="NoResize">

    <Window.Resources>

        <Style x:Key="NonValidTextBox">
            <Setter Property="TextBox.Background" Value="Pink"/>
        </Style>

    </Window.Resources>

    <DockPanel Height="Auto" Width="Auto" Name="dockPanel1">
        <Label HorizontalContentAlignment="Center" Content="Add author" Height="44" Name="titleLabel" Width="Auto" DockPanel.Dock="Top" FontSize="24" Background="#FFDDF0F9" BorderBrush="#FF006EDC" BorderThickness="0,0,0,1" />
        <Grid Height="41" Name="bottomGrid" Width="Auto" DockPanel.Dock="Bottom" Background="DarkGray" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="79*"/>
                <ColumnDefinition Width="559*"/>
            </Grid.ColumnDefinitions>
            <Button Name="saveButton" Content="Save" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="saveButton_Click"/>
            <Button Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="11.405,10,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="cancelButton_Click"/>
        </Grid>

        <Grid Height="Auto" Name="mainGrid" Width="Auto" Background="#FFEBF2F7">
            <Label Content="Id" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="190"/>
            <TextBox Name="au_idTextBox" Tag="au_id" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
            <Label Name="au_idLabel" Tag="au_id" Content="" HorizontalAlignment="Left" Margin="315,40,0,0" VerticalAlignment="Top" Width="315"/>
            
            <Label Content="First name" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="190"/>
            <TextBox Name="au_fnameTextBox" Tag="au_fname" HorizontalAlignment="Left" Height="23" Margin="10,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
            <Label Name="au_fnameLabel" Tag="au_fname" Content="" HorizontalAlignment="Left" Margin="315,100,0,0" VerticalAlignment="Top" Width="315"/>
            
            <Label Content="Last name" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Width="190"/>
            <TextBox Name="au_lnameTextBox" Tag="au_lname" HorizontalAlignment="Left" Height="23" Margin="10,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
            <Label Name="au_lnameLabel" Tag="au_lname" Content="" HorizontalAlignment="Left" Margin="315,160,0,0" VerticalAlignment="Top" Width="315"/>

            <Label Content="Phone" HorizontalAlignment="Left" Margin="10,190,0,0" VerticalAlignment="Top" Width="190"/>
            <TextBox Name="phoneTextBox" Tag="phone" HorizontalAlignment="Left" Height="23" Margin="10,220,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
            <Label Name="phoneLabel" Tag="phone" Content="" HorizontalAlignment="Left" Margin="315,220,0,0" VerticalAlignment="Top" Width="315"/>

            <Label Content="City" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top" Width="190"/>
            <TextBox Name="cityTextBox" Tag="city" HorizontalAlignment="Left" Height="23" Margin="10,280,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
            <Label Name="cityLabel" Tag="city" Content="" HorizontalAlignment="Left" Margin="315,280,0,0" VerticalAlignment="Top" Width="315"/>

            <Label Content="Address" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Width="190"/>
            <TextBox Name="addressTextBox" Tag="address" HorizontalAlignment="Left" Height="23" Margin="10,340,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
            <Label Name="addressLabel" Tag="address" Content="" HorizontalAlignment="Left" Margin="315,340,0,0" VerticalAlignment="Top" Width="315"/>

            <Label Content="State" HorizontalAlignment="Left" Margin="10,370,0,0" VerticalAlignment="Top" Width="190"/>
            <TextBox Name="stateTextBox" Tag="state" HorizontalAlignment="Left" Height="23" Margin="10,400,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
            <Label Name="stateLabel" Tag="state" Content="" HorizontalAlignment="Left" Margin="315,400,0,0" VerticalAlignment="Top" Width="315"/>

            <Label Content="Zip" HorizontalAlignment="Left" Margin="10,430,0,0" VerticalAlignment="Top" Width="190"/>
            <TextBox Name="zipTextBox" Tag="zip" HorizontalAlignment="Left" Height="23" Margin="10,460,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
            <Label Name="zipLabel" Tag="zip" Content="" HorizontalAlignment="Left" Margin="315,460,0,0" VerticalAlignment="Top" Width="315"/>
        </Grid>
    </DockPanel>
</Window>
