<Window x:Class="WPF_Restful_Client_Auth.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Restful_Client_Auth"
        mc:Ignorable="d"
        Title="LoginForm" Height="300" Width="414.87" WindowStartupLocation="CenterOwner">

    <DockPanel Height="Auto" Width="Auto" Name="dockPanel1">
        <Label HorizontalContentAlignment="Center" Content="Login" Height="44" Name="titleLabel" Width="Auto" DockPanel.Dock="Top" FontSize="24" Background="#FFDDF0F9" BorderBrush="#FF006EDC" BorderThickness="0,0,0,1" />
        <Grid Height="41" Name="bottomGrid" Width="Auto" DockPanel.Dock="Bottom" Background="DarkGray" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="79*"/>
                <ColumnDefinition Width="559*"/>
            </Grid.ColumnDefinitions>
            <Button Name="saveButton" Content="Ok" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="saveButton_Click"/>
            <Button Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="40,9,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="cancelButton_Click"/>
        </Grid>

        <Grid Height="Auto" Name="mainGrid" Width="Auto" Background="#FFEBF2F7">
            
            <Label Content="Login" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="190"/>
            <TextBox Name="loginTextBox" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" TextWrapping="Wrap" Text="alex@ya.ru" VerticalAlignment="Top" Width="300"/>
            
            <Label Content="Password" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="190"/>
            <PasswordBox PasswordChar="*" Name="passwordTextBox" HorizontalAlignment="Left" Height="23" Margin="10,100,0,0" Password="Qwerty_123" VerticalAlignment="Top" Width="300"/>
        
        </Grid>
    </DockPanel>

</Window>
