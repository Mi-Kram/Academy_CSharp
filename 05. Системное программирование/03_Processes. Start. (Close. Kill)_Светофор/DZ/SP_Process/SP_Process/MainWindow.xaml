<Window x:Class="SP_Process.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SP_Process"
        mc:Ignorable="d"
        Title="Process monitor" Height="600" Width="1024">
    <Grid>
        <DataGrid IsReadOnly="True" x:Name="processTable" Margin="10,10,134,10"/>
        <Button Content="Show processes" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="105" Click="Button_Click"/>
        <Button Content="Start process" Margin="0,37,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="105" Click="Button_Click_1"/>
        <Button Content="Kill process" Margin="0,64,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="105" Click="Button_Click_2"/>
        <Button Content="Get info" Margin="0,91,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="105" Click="Button_Click_3"/>

    </Grid>
</Window>
