<Window x:Class="Main.GroupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="GroupDialog" Height="300" Width="400" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Loaded="Window_Loaded" Closing="Window_Closing">

    <Window.Resources>
        <Style x:Key="TextBlockTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5,0,5,0"/>
            <Setter Property="Margin" Value="0.5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FFb7b7b7"/>
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>

        <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="RadioButtonGridStyle" TargetType="Grid">
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="Background" Value="#FFb7b7b7"/>
            <Setter Property="Margin" Value="0.5"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Border Background="#FFE8E8E8" BorderBrush="#FF3D3D3D" BorderThickness="3" Width="300" Margin="15,10,0,10" HorizontalAlignment="Left">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel x:Name="stackPanel" Orientation="Vertical">
                    <Grid >
                        <TextBlock Background="#FF919191" Style="{StaticResource TextBlockTitleStyle}" Margin="0,1,0,5" TextAlignment="Center" Text="Столбец для групировки"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Button Width="60" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Content="OK" FontSize="22" FontWeight="Bold" Click="OKBtn_Click"/>
        <Button Width="60" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,50" Content="Cancel" FontSize="15" FontWeight="Bold" Click="CancelBtn_Click"/>
        <Button Width="60" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,90" Content="Refresh" FontSize="15" FontWeight="Bold" Click="RefreshBtn_Click" />
    </Grid>
</Window>
