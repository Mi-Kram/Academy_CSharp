<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="MainWindow" Height="330" Width="800" WindowStartupLocation="CenterScreen">

    <Grid>
        <TextBlock Text="From:" FontSize="20" FontWeight="Bold" Margin="100, 25,0,0" Height="30" Width="60" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Border BorderBrush="Black" BorderThickness="1.5,1.5,0.7,0.7" Width="600" Margin="170, 25,0,0" Height="30"  HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock x:Name="FromDir" FontSize="20" FontWeight="Bold" TextWrapping="NoWrap"/>
        </Border>
        <Button Content="Choose" Width="70" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0" Click="Button_Click"/>


        <TextBlock Text="To:" FontSize="20" FontWeight="Bold" Margin="100, 80,0,0" Height="30" Width="60" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Border BorderBrush="Black" BorderThickness="1.5,1.5,0.7,0.7" Width="600" Margin="170, 75,0,0" Height="30"  HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock x:Name="ToDir" FontSize="20" FontWeight="Bold" TextWrapping="NoWrap"/>
        </Border>
        <Button Content="Choose" Width="70" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,75,0,0" Click="Button1_Click"/>


        <ProgressBar x:Name="progress" Height="50" Width="700" Value="0" Maximum="100" VerticalAlignment="Top" Margin="0,150,0,0"/>


        <Button Content="Start" Width="70" Height="50" FontSize="20" FontWeight="Bold" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,20" Click="Button_Click_1"/>
    </Grid>
</Window>
